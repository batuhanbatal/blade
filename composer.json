{
    "name": "duncan3dc/blade",
    "type": "library",
    "description": "Use Laravel Blade templates without the full Laravel framework",
    "keywords": ["laravel", "templating", "template", "views"],
    "homepage": "https://github.com/duncan3dc/blade",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Craig Duncan",
        "email": "git@duncanc.co.uk",
        "homepage": "https://github.com/duncan3dc",
        "role": "Developer"
    }],
    "require": {
        "illuminate/contracts": ">=5.5,<5.7",
        "illuminate/events": ">=5.5,<5.7",
        "illuminate/filesystem": ">=5.5,<5.7",
        "illuminate/view": ">=5.5,<5.7",
        "php": "^7.1"
    },
    "require-dev": {
        "duncan3dc/object-intruder": "^0.3.0",
        "maglnet/composer-require-checker": "^1.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.10.3",
        "squizlabs/php_codesniffer": "^3.3",
        "phpunit/phpunit": "^6.4"
    },
    "autoload": {
        "psr-4": {"duncan3dc\\Laravel\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"duncan3dc\\LaravelTests\\": "tests/"},
        "files": ["tests/functions.php"]
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit",
            "vendor/bin/composer-require-checker",
            "vendor/bin/phpstan analyse --level=max src",
            "vendor/bin/phpcs"
        ]
    }
}
